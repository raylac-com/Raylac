{
  "include": [
    "src/**/*.ts"
  ],
  "compilerOptions": {
    "outDir": "out",
    "module": "CommonJS",
    "target": "ES2020",
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowJs": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  }
}