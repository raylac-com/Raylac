// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Swap {
  id Int @id @default(autoincrement())

  address         String
  tokenAddressIn  String
  tokenAddressOut String

  transactions Transaction[]

  amountIn  Decimal
  amountOut Decimal

  usdAmountIn  Decimal
  usdAmountOut Decimal

  relayerServiceFeeAmount       Decimal
  relayerServiceFeeUsd          Decimal
  relayerServiceFeeTokenAddress String
  relayerServiceFeeChainId      Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  History History[]
}

model Transfer {
  id Int @id @default(autoincrement())

  bridges Bridge[]

  txHash String @unique

  from               String
  to                 String
  destinationChainId Int

  tokenAddress String
  amount       Decimal
  amountUsd    Decimal
  tokenPrice   Decimal

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  History   History[]
}

model Bridge {
  id Int @id @default(autoincrement())

  fromChainId Int
  toChainId   Int

  address   String
  amountIn  Decimal
  amountOut Decimal

  bridgeFeeAmount Decimal
  bridgeFeeUsd    Decimal

  tokenAddress String

  txHash String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  Transfer   Transfer? @relation(fields: [transferId], references: [id])
  transferId Int?
}

model Transaction {
  hash String @id

  from String
  to   String

  chainId Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  Swap   Swap? @relation(fields: [swapId], references: [id])
  swapId Int?
}

model History {
  id Int @id @default(autoincrement())

  Transfer   Transfer? @relation(fields: [transferId], references: [id])
  transferId Int?

  Swap   Swap? @relation(fields: [swapId], references: [id])
  swapId Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
