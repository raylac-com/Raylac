{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "db:generate": {
      "cache": false
    },
    "build": {
      "dependsOn": ["^db:generate", "^build"],
      "outputs": ["out/**"]
    },
    "build:watch": {
      "outputs": ["out/**"]
    },
    "lint": {
      "dependsOn": ["^build"]
    }
  }
}
